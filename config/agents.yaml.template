# UICP Agents Configuration (template)
# Copy this file to config/agents.yaml and edit as needed.

version: "1"

defaults:
  temperature: 0.2
  top_p: 1.0
  max_tokens: 4096
  json_mode: true
  tools_enabled: true

providers:
  openrouter:
    base_url: https://openrouter.ai/api/v1
    headers:
      Authorization: "Bearer ${OPENROUTER_API_KEY}"
      HTTP-Referer: "${OPENROUTER_REFERER}"
      X-Title: "${OPENROUTER_TITLE}"
    model_aliases:
      gpt_default: { id: openai/gpt-5 }
      claude_default: { id: anthropic/claude-sonnet-4.5 }
    list_models: { method: GET, url: https://openrouter.ai/api/v1/models, id_path: "data[].id" }

profiles:
  planner:
    provider: openrouter
    mode: preset
    preset_model: claude_default
    temperature: 0.2
    max_tokens: 4096
    fallbacks:
      - openrouter:gpt_default

  actor:
    provider: openrouter
    mode: preset
    preset_model: gpt_default
    temperature: 0.2
    max_tokens: 4096
    fallbacks:
      - openrouter:claude_default

codegen:
  engine: "cli"
  allow_paid_fallback: false
