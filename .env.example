# Ollama Cloud Configuration
# Set to 1 to use Ollama Cloud; 0 for local offload daemon
USE_DIRECT_CLOUD=1

# Ollama API Key (required when USE_DIRECT_CLOUD=1)
OLLAMA_API_KEY=

# Model Configuration
PLANNER_MODEL=deepseek-v3.1:671b
ACTOR_MODEL=qwen3-coder:480b

# In-App Network Guard (process-level egress control)
# Enabled by default; in development, monitor mode defaults to 1
VITE_NET_GUARD_ENABLED=1
VITE_NET_GUARD_MONITOR=1
VITE_GUARD_VERBOSE=0

# Allowlists (domains, exact IPs, IPv4 CIDR ranges, and path prefixes)
# Loopback is allowed by default; listed here for clarity
VITE_GUARD_ALLOW_DOMAINS=localhost
VITE_GUARD_ALLOW_IPS=127.0.0.1,::1
# Example: 192.168.0.0/16 to allow a whole lab subnet in dev
VITE_GUARD_ALLOW_IP_RANGES=
VITE_GUARD_ALLOW_PATHS=/api,/ok

# Realtime features (blocked by default; enable as needed per window)
VITE_GUARD_BLOCK_WORKERS=1
VITE_GUARD_BLOCK_SERVICE_WORKER=1
VITE_GUARD_BLOCK_WEBRTC=1
VITE_GUARD_BLOCK_WEBTRANSPORT=1

# Payload/response/redirect caps (optional)
VITE_GUARD_MAX_REQUEST_BYTES=
VITE_GUARD_MAX_RESPONSE_BYTES=
VITE_GUARD_MAX_REDIRECTS=0

# Attempt sampling: emit 1/net attempts as 'net-guard-attempt' events (dev default: 1)
VITE_GUARD_ATTEMPT_SAMPLE=

# Adaptive rollout (monitor -> enforce)
# Stage: 'monitor' | 'enforce' | 'auto' (default: auto in dev, enforce in prod)
VITE_GUARD_ROLLOUT_STAGE=auto
# Minutes to remain in monitor in 'auto' until escalation if no blocks observed
VITE_GUARD_ROLLOUT_MINUTES_MONITOR=30

# Secure Compute (WASM) Defaults
# NOTE: Keep dev defaults permissive; enable strict settings in production packaging.
# Golden cache v2 on by default for deterministic caching
UICP_CACHE_V2=1

# Require signed modules (set to 1 in production)
STRICT_MODULES_VERIFY=0
# Provide trust store mapping key IDs to Ed25519 public keys (hex or base64)
# Example: {"prod-key-2025":"ih4HBWNN6fqiMx8ee5NICPwDUzu/4ORtUjo7OTVu4wg="}
UICP_TRUST_STORE_JSON=

# Require per-job MAC tokens minted by the UI (set to 1 in production)
UICP_REQUIRE_TOKENS=0

# WASM concurrency (jobs in parallel). Typical: 2-4.
UICP_WASM_CONCURRENCY=2
