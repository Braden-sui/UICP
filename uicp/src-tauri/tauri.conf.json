{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.uicp.desktop",
  "productName": "UICP",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "UICP",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "decorations": false
      }
    ],
    "security": {
      "capabilities": [
        "default",
        "fs-desktop-write"
      ]
    }
  },
  "bundle": {
    "icon": [
      "icons/dev_logo_icon_267632.ico"
    ],
    "resources": [
      "modules/**/*"
    ]
  },
  "plugins": {}
}

