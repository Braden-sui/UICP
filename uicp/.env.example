# UICP Configuration
# Copy this file to .env and configure for your environment

# Cloud mode toggle (1 = direct cloud, 0 = local offload daemon)
USE_DIRECT_CLOUD=1

# Ollama API key (required when USE_DIRECT_CLOUD=1)
OLLAMA_API_KEY=

# Model configuration
PLANNER_MODEL=deepseek-v3.1:671b
ACTOR_MODEL=kimi-k2:1t

# WebSocket transport
UICP_WS_URL=ws://localhost:7700

# Ollama endpoints
OLLAMA_CLOUD_HOST=https://ollama.com
OLLAMA_LOCAL_BASE=http://127.0.0.1:11434/v1
